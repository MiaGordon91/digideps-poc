{% extends 'base.html.twig' %}

    {% block body %}
    <div class="govuk-width-container">
        <main class="govuk-main-wrapper">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">

                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger" id="logInError">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="govuk-body">
                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <h1 class="govuk-heading-xl">Sign in</h1>

                        <label for="inputEmail" class="govuk-label govuk-label--m">Email address</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="govuk-input  govuk-!-width-one-half" autocomplete="email" required autofocus>

                        <div class="govuk-form-group govuk-!-static-padding-top-5">
                            <label for="inputPassword" class="govuk-label govuk-label--m" for="password">
                                Password
                            </label>

                             <input type="password" name="password" id="inputPassword" class="govuk-input govuk-!-width-one-half">

                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                        #}

                        <button class="govuk-button behat-link-login" type="submit" id="signIn">
                            Sign in
                        </button>
                    </form>

                    <div>
                        <p class="govuk-body">Have you registered for the online deputy service? If not, please click <a href="/register" class="govuk-link" id="downloadMoneyOut">here</a>.</p>
                    </div>

                </div>
            </div>
        </main>
    </div>
{% endblock %}
